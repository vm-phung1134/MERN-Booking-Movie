{
    "version": 2,
    "builds": [
      {
        "src": "**/*.js",
        "use": "@now/node"
      },
      {
        "src": "public/*",
        "use": "@now/static"
      },
      {
        "src": "*.pug",
        "use": "@now/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "index.js"
      }
    ]
  }